  <div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre seu Estágio em Juiz de fora</h1>
    <p id="main-subtitle" class="text-center">Somos um site Especializado em Estágio em Juiz de fora</p>
    <form id="search-form" class="form-inline" action="/" method="GET">
      <div class="form-group col-md-10">
        <input type="text" class="form-control" id="job" name="job" placeholder="Digite a vaga que está buscando">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Procurar</button>
      </div>
    </form>
  </div>
  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          {{#if search}}
          <h2 id="job-list-title">Buscando a vaga: {{search}}</h2>
          {{else}}
          <h2 id="job-list-title">Veja as nossas vagas em destaque</h2>
          {{/if}}
          <ul id="job-list" class="list-group">
            {{#each todoE}}
            <li class="list-group-item">
              <img src="/company.svg" alt="Company">
              <p>{{dataValues.company}}</p>
              <h2>{{dataValues.title}}</h2>
              <p>R${{dataValues.salario}}</p>
              <span class="new-job-label">Nova</span>
              <a class="btn btn-primary" href="/api/view/{{dataValues.id}}">Ver vaga</a>
              {{/each}}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>